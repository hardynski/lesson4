pipeline {
    agent any
    stages {
        stage('Clone repository') {
          steps {
               checkout scm
               }
            }
        stage('Docker Build') {
          steps {
               sh 'docker build -t ubuntu:latest .'
      }
    }

stage('Docker tag') {
      steps {
           sh 'docker tag ubuntu:latest hardynski/lesson5:latest'
        }
      }

stage('Docker Push') {
      steps {
          sh 'docker push hardynski/lesson5:latest'
      }
    }

          }
}
